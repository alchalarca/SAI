{% extends 'layout.twig' %}
{% block updateInfDep %}
	{% include 'partials/nav.twig' %}

	{% for data in datosMember %}



		<div class="container py-5">
			<div class="row">
				<div class="col-md-12">
					<div class="row">



						<!--/col-->
						<div class="col-md-8 offset-md-2">
							<span class="anchor" id="formUserEdit"></span>
							<hr class="my-5">

							<!-- form user info -->
							<div class="card card-outline-secondary">
								<div class="card-header">
									<h3 class="mb-0">Editar Información Deportiva</h3>
								</div>
								<div class="card-body">
									<form class="form" role="form" id="frmUpdateInfDep" autocomplete="off">


										<input type="hidden" class="tipoEstadoSelected novalidate" value="{{data.status}}">

										<input type="hidden" class="tipoPosicionSelected novalidate" value="{{data.id_posicion}}">
										<input type="hidden" class="tipoCategoriaSelected novalidate" value="{{data.id_categoria}}">
										<input type="hidden" class="tipoMiembroSelected novalidate" value="{{data.id_miembro}}">
										

										<input type="hidden" class="id novalidate" name="id" id="id" value="{{data.id}}">

										<div class="form-group row">
											<label class="col-lg-3 col-form-label form-control-label">Fecha Inicio</label>
											<div class="col-lg-9">
												<input type="date" placeholder="Fecha Inicio" v-name="Fecha Inicio" name="fecha_inicio" id="fecha_inicio" class="form-control" value="{{data.fecha_inicio}}">
											</div>
										</div>

										

										<div class="form-group row">
											<label class="col-lg-3 col-form-label form-control-label">Posición</label>
											<div class="col-lg-9">
												<div>
													<select name="id_posicion" id="id_posicion" class="form-control">


													</select>
												</div>
											</div>
										</div>

										<div class="form-group row">
											<label class="col-lg-3 col-form-label form-control-label">Categoria</label>
											<div class="col-lg-9">
												<div>
													<select name="id_categoria" id="id_categoria" class="form-control">


													</select>
												</div>
											</div>
										</div>

										<div class="form-group row">
											<label class="col-lg-3 col-form-label form-control-label">Observaciones</label>
											<div class="col-lg-9">
												<input type="text" placeholder="Observaciones" v-name="Observaciones" name="observaciones" class="form-control" value="{{data.observaciones}}">
											</div>
										</div>

										<div class="form-group row">
											<label class="col-lg-3 col-form-label form-control-label">Miembro</label>
											<div class="col-lg-9">
												<div>
													<select name="id_miembro" id="id_miembro" class="form-control">


													</select>
												</div>
											</div>
										</div>

										
										<div class="form-group row">
											<label class="col-lg-3 col-form-label form-control-label">Estado</label>
											<div class="col-lg-9">
												<div>
													<select name="status" id="id_estado" class="form-control">


													</select>
												</div>
											</div>
										</div>


										<div class="form-group">
											<input type="submit" value="Guardar" class="btn btn-primary">
										</div>





									</form>
								</div>
							</div>
							<!-- /form user info -->

						</div>



					</div>
					<!--/row-->


				</div>
				<!--/col-->
			</div>

		</div>
		<!--/container-->

	{% endfor %}
{% endblock %}