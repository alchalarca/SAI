{% extends 'layout.twig' %}
{% block pagos %}
	{% include 'partials/nav.twig' %}
	<section>
		<div
			class="container-fluid">

			<!-- Tab panes -->
			<div class="tab-content">
				<div id="home" class="container tab-pane active"><br>

					<div class="row">
						<div class="col-lg-12 col-md-12">
							<div class="card">
								<div class="card-header">
									<h4>Gestión Pagos</h4>
								</div>


								<div class="card-body">
									<a id="btn_editar" class="btn btn-primary float-left" data-toggle="modal" href="#modalPagos">Crear</a>
									<div class="table-responsive">
										<br/>
										<table class="table table-striped table-hover" id="tablepagos">
											<thead>
												<tr>
													<th># Recibo</th>
													<th>Concepto Pago</th>
													<th>Nombres y Apellidos</th>
													<th>N° Documento</th>
													<th>Fecha Pago</th>
													<th>valor</th>
													{% if group_id == 1 %}
													<th>Acciones</th>
													{% endif %}
												</tr>
											</thead>
											<tbody>

												{% for data in pagos %}
													<tr class="active">

														<td id="idUsu">{{data.num_recibo}}</td>
														<td>{{data.concepto_pago}}</td>
														<td>{{data.nombres}}
															{{data.apellidos}}</td>

														<td>{{data.id_miembro}}</td>
														<td>{{data.fecha_pago}}</td>
														<td>{{data.valor}}</td>


														
															{% if group_id == 1 %}
																<td>
																	<a href="#" id="btn_editarusu" class="btn btn-primary">
																		<i class="fa fa-pencil" aria-hidden="true"></i>
																	</a>
																</td>
															{% endif %}
															

															<!--<button type="button" onclick="deleteUser({{data.id}});" id="btn_deleteusu" class="btn btn-primary">
																<i class="fa fa-trash-o" aria-hidden="true"></i>
															</button>-->
														
													</tr>
												{% endfor %}


											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>


				</div>

			</div>
		</div>


	</section>
	<!-- Modal-->
	<div id="modalPagos" class="modal fade bd-example-modal-xl" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
		<div role="document" class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 id="exampleModalLabel" class="modal-title">Crear Pago</h5>
					<button type="button" data-dismiss="modal" aria-label="Close" class="close">
						<span aria-hidden="true">×</span>
					</button>
				</div>
				<div class="modal-body">

					<form id="frmAddPago">
						<div class="form-row">

							<div class="form-group col-md-6">
								<label>Numero Recibo</label>
								<input type="text" placeholder="Recibo" v-name="Numero Recibo" name="num_recibo" class="form-control">
							</div>

							<div class="form-group col-md-6">
								<label>Documento del Miembro</label>
								<input type="text" placeholder="Documento" v-name="Documento" v-only="number" v-min="3" name="id_miembro" id="id_miembro" class="form-control">
							</div>
						</div>

						<div class="form-row">

							<div class="form-group col-md-6">
								<label>Fecha Pago</label>
								<input type="date" placeholder="Fecha Pago" v-name="Fecha Pago" name="fecha_pago" class="form-control">
							</div>

							<div class="form-group col-md-6">
								<label>Valor</label>
								<input type="text" placeholder="Valor" v-name="Valor" v-only="number" name="valor" class="form-control">
							</div>
						</div>

						<div class="form-group">
							<label class="form-control-label">Concepto Pago</label>
							<div>
								<select name="id_concepto" id="id_concepto" class="form-control"></select>
							</div>
						</div>

						<div class="form-group">
							<div class="custom-file">
								<input type="file" class="custom-file-input" v-name="Soporte Recibo" v-only="file" id="soporte_recibo" name="soporte_recibo" lang="es">
								<label class="custom-file-label" for="soporte_recibo">Soporte Recibo</label>
							</div>
						</div>

						<div class="form-group">
							<input type="submit" value="Guardar" class="btn btn-primary">
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
