							<div class="clearfix"></div>
							<div class="bot-border"></div>

							<div class="col-sm-5 col-xs-6 tital ">Observaciones:</div>
							<div class="col-sm-7">{{data.observaciones}}</div>

							<div class="clearfix"></div>
							<div class="bot-border"></div>

							<div class="col-sm-5 col-xs-6 tital ">Estado:</div>
							<div class="col-sm-7">{{data.status}}</div>
