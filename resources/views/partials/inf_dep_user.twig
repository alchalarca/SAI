							<div class="clearfix"></div>
							<div class="bot-border"></div>

                            <div class="col-sm-5 col-xs-6 tital ">Identificación:</div>
							<div class="col-sm-7">{{data.identificacion}}</div>

							<div class="clearfix"></div>
							<div class="bot-border"></div>

